<UserControl x:Class="BookshopApp.Views.ViewStock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookshopApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel >
        <TabControl DockPanel.Dock="Top">
            <TabItem Header="Recherche" >
                <ContentControl x:Name="StockRecherche" DockPanel.Dock="Top" Content="ViewModelContentStockRecherche"/>
            </TabItem>
            <TabItem Header="Consultation" >
                <ContentControl x:Name="StockConsult" DockPanel.Dock="Top" Content="ViewModelContentStockConsult"/>
            </TabItem>
            <TabItem Header="Modification" >
                <ContentControl x:Name="StockModif" DockPanel.Dock="Top" Content="ViewModelContentStockModif"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
